  <DataSets>
    <DataSet Name="Orders">
      <Query >
        <DataSourceName>DS1</DataSourceName>
        <CommandText>SELECT
	MainOrders.id,
	counterparty.name as CounterpartyName,
    delivery_points.compiled_address_short as AddressShort,
	MainOrders.delivery_date as DeliveryDate,
    BottlesTable.bottle_count as BottleCount,
    BottlesTable.smallest_price as Price,
    BottlesTable.minPrice as PricePerOne,
    counterparty.comment as comment
FROM
	orders as MainOrders
    #Подсчет кол-ва всех бутылей и наименьшей цены в заказе 
    LEFT JOIN 
		(
			SELECT
				order_id,
                Nom2.category,
				SUM(count) as bottle_count,
                MIN(price) as smallest_price,
                (
					# Нахождение минимальной цены по количеству
					SELECT 
						nomenclature_price.price
					FROM
						nomenclature_price
					WHERE 
						nomenclature_price.nomenclature_id = 1 /* Цены выбираются по номенклатуре Семиозерье 19л (Id = 1) */ 
						AND nomenclature_price.min_count &lt;= SUM(count)
					ORDER BY nomenclature_price.price ASC LIMIT 1 
				) as minPrice
			FROM order_items as SumOrderItems
				LEFT JOIN nomenclature as Nom2 ON SumOrderItems.nomenclature_id = Nom2.id
			WHERE Nom2.category = 'water'
            GROUP BY SumOrderItems.order_id
        ) as BottlesTable ON BottlesTable.order_id = MainOrders.id
    LEFT JOIN counterparty ON MainOrders.client_id = counterparty.id
    LEFT JOIN delivery_points ON MainOrders.delivery_point_id = delivery_points.id
WHERE
	#Находит только те записи у которых цена ниже чем задана по прайсу
	BottlesTable.smallest_price &lt; BottlesTable.minPrice
	AND BottlesTable.smallest_price &gt; 0
	AND BottlesTable.category = 'water'
	AND (MainOrders.order_status NOT IN ('Canceled','DeliveryCanceled'))
    AND (@DateFrom = '' OR MainOrders.delivery_date &gt;= @DateFrom) AND (@DateTo = '' OR MainOrders.delivery_date &lt;= @DateTo)
    
    #Нахождение только последнего по дате заказа
    AND NOT EXISTS (
		SELECT 
			*
        FROM 
			orders as SubOrders            
            LEFT JOIN 
				(
					SELECT
						order_id,
						Nom2.category,
						SUM(count) as bottle_count,
						MIN(price) as smallest_price,
						(
							# Нахождение минимальной цены по количеству
							SELECT 
								nomenclature_price.price
							FROM
								nomenclature_price
							WHERE 
								nomenclature_price.nomenclature_id = 1 /* Цены выбираются по номенклатуре Семиозерье 19л (Id = 1) */ 
								AND nomenclature_price.min_count &lt;= SUM(count)
							ORDER BY nomenclature_price.price ASC LIMIT 1 
						) as minPrice
					FROM order_items as SumOrderItems
						LEFT JOIN nomenclature as Nom2 ON SumOrderItems.nomenclature_id = Nom2.id
					WHERE Nom2.category = 'water'
					GROUP BY SumOrderItems.order_id
				) as SubBottlesTable ON SubBottlesTable.order_id = SubOrders.id
        WHERE 
			MainOrders.delivery_point_id = SubOrders.delivery_point_id
			AND SubOrders.delivery_date &gt; MainOrders.delivery_date
            #Находит только те записи у которых цена ниже чем задана по прайсу
            AND SubBottlesTable.smallest_price &lt; SubBottlesTable.minPrice
			AND SubBottlesTable.smallest_price &gt; 0
			AND SubBottlesTable.category = 'water'
			AND (SubOrders.order_status NOT IN ('Canceled','DeliveryCanceled'))
    )
GROUP BY delivery_point_id ORDER BY DeliveryDate DESC, BottlesTable.smallest_price</CommandText>
        <QueryParameters>
          <QueryParameter Name="DateFrom">
            <Value>=Parameters!dateFrom</Value>
          </QueryParameter>
          <QueryParameter Name="DateTo">
            <Value>=Parameters!dateTo</Value>
          </QueryParameter>
        </QueryParameters>
      </Query>
      <Fields >
        <Field Name="CounterpartyName">
          <DataField>CounterpartyName</DataField>
          <TypeName>System.String</TypeName>
        </Field>
        <Field Name="AddressShort">
          <DataField>AddressShort</DataField>
          <TypeName>System.String</TypeName>
        </Field>
        <Field Name="DeliveryDate">
          <DataField>DeliveryDate</DataField>
          <TypeName>System.DateTime</TypeName>
        </Field>
        <Field Name="BottleCount">
